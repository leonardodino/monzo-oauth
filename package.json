{
  "name": "monzo-oauth",
  "version": "0.0.0-alpha",
  "license": "MIT",
  "bin": "./dist/index.js",
  "repository": "leonardodino/monzo-oauth",
  "homepage": "https://monzo-oauth.glitch.me",
  "files": [
    "dist/**"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "dev": "nodemon ./src/index.ts",
    "start": "node ./dist/index.js",
    "prebuild": "rm -rf dist",
    "build": "tsc && cp src/*.html dist && chmod +x dist/index.js",
    "postbuild": "echo \"$(awk '{sub(/ts-node/, \"node\"); print}' dist/index.js)\" > dist/index.js",
    "test": "JEST_PLAYWRIGHT_CONFIG=jest-playwright.config.ts jest",
    "genv": "env",
    "e2e": "yarn build && yarn pack --filename monzo-oauth.tgz && npx=true yarn test",
    "prepublishOnly": "yarn e2e",
    "format": "prettier --write --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/wait-on": "^4.0.0",
    "jest": "^26.2.2",
    "jest-playwright-preset": "^1.3.0",
    "node-request-interceptor": "^0.3.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "playwright": "^1.2.1",
    "prettier": "2.0.5",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript"
  },
  "jest": {
    "verbose": true,
    "preset": "jest-playwright-preset",
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "types": [
            "jest",
            "jest-playwright-preset",
            "expect-playwright"
          ]
        }
      }
    }
  }
}
