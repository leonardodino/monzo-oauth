{
  "name": "monzo-oauth",
  "version": "0.0.0-alpha",
  "license": "MIT",
  "bin": "./lib/server.js",
  "files": [
    "lib/**"
  ],
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "dev": "nodemon ./src/server.ts",
    "start": "node ./lib/server.js",
    "prebuild": "rm -rf lib",
    "build": "tsc && cp src/*.html lib && chmod +x ./lib/server.js",
    "test": "JEST_PLAYWRIGHT_CONFIG=jest-playwright.config.ts jest",
    "e2e": "yarn build && yarn pack && e2e=true yarn test",
    "prepublishOnly": "yarn e2e",
    "format": "prettier --write --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "jest": "^26.2.2",
    "jest-playwright-preset": "^1.3.0",
    "nodemon": "^2.0.4",
    "playwright": "^1.2.1",
    "prettier": "2.0.5",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "jest": {
    "verbose": true,
    "preset": "jest-playwright-preset",
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
